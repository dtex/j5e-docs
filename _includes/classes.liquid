{% for class in module.classes %}
  <hr class="my-8"/>
  <h2 id="{{class.name}}.class">Class: <span class="font-normal">{{ class.name }}</span></h2>
  <p>{{ class.classdesc }}</p>
  <h3 id="{{ class.name }}.constructor">Constructor</h3>
  <pre class="my-8"><code class="language-javascript">new <span class="font-normal">{{ class.name }}({% for param in class.primaryParams %}{{ param.name }}{% if forloop.last == false %}, {% endif %}{% endfor %})</code></pre>
  <h4>Parameters</h4>
  <div class="params-table">
    <div class="col-span-3 params-table-header">Name</div>
    <div class="col-span-3 params-table-header">Type</div>
    <div class="col-span-6 params-table-header">Description</div>
    {% for param in class.params %}
        {% include params %}
    {% endfor %} 
  </div>
  {% if class.examples %}
    <h2>Example{% if class.examples.length > 1 %}s{% endif %}</h2>
    {% for example in class.examples %}
      <pre><code class="language-javascript">{{ example }}</code></pre>
    {% endfor %}
  {% endif %}
  {% if class.properties.length > 0 %}
    <h2 id="{{ class.name }}.properties">Properties</h2>
    <div class="params-table">
      <div class="col-span-3 params-table-header">Name</div>
      <div class="col-span-3 params-table-header">Type</div>
      <div class="col-span-6 params-table-header">Description</div>
      {% for property in class.properties %}
        {% include properties %}
      {% endfor %}
    </div>
  {% endif %}
  {% if class.fires %}
    <h2 id="{{ class.name }}.events">Events</h2>
    <ul>
      {% for event in class.fires %}
        <li>{{ event }}</li>
      {% endfor %}
    </ul>
  {% endif %}
  {% if class.methods %}
    <h2 id="{{ class.name }}.methods">Methods</h2>
    {% for method in class.methods %}
      {% include methods %}
    {% endfor %}
  {% endif %}
  
{% endfor %}